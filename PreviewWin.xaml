<Page x:Class="Converter.PreviewWin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="PreviewWin">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button x:Name="OpenDocumentButton" Content="Открыть документ" Click="OpenDocumentButton_Click" Margin="10"/>
            <Button x:Name="NextPage" Content="Следующая страница" Click="NextPage_Click" Margin="10"/>
            <Button x:Name="PreviousPage" Content="Предыдущая страница" Click="PreviousPage_Click" Margin="10"/>
        </StackPanel>
    
        <Image x:Name="pictureBox" Grid.Row="1" Stretch="Uniform"/>
    </Grid>
</Page>
